<% if flash.has?(:message) %>
  <p class="flash-fail"><%= flash[:message] %> </p>
<% end %> 

<h2>Sign Up</h2>

<form  action="/signup" method="post">
  <p>Full Name: <input type="text" name="user[name]"></p>
  <p>Apartment: <input type="text" name="user[apartment]"></p>
  <p>Password: <input type="password" name="user[password]"></p>
  <input type="submit" value="Sign Up">
</form>